

<div class="container ">

		  <form name="signupfrm" class="form-signin" >
			<h2 class="form-signin-heading">Sign Up</h2>
			<label for="inputEmail" class="sr-only">Email address</label>
			<input type="email" id="inputEmail" ng-model="newUser.email" class="form-control" placeholder="Email address" ng-required="true" autofocus="">
			
			<label for="inputEmail" class="sr-only">User Name</label>
			<input type="text"  ng-model="newUser.username" class="form-control" placeholder="User Name" ng-required="true" >
			
			
			
			<label for="inputPassword" class="sr-only">Password</label>
			<input type="password" id="inputPassword" ng-model="newUser.password" class="form-control" placeholder="Password" ng-required="true">
			<div class="checkbox"></div>
			<button class="btn btn-lg btn-primary btn-block" ng-click="signupfrm.$valid && createUser()" type="submit">Submit</button>
		  </form>

    </div>