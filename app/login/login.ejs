<div class="container ">
		<div class="alert alert-danger" role="alert" ng-show="status">
		 <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		{{msg}}
		</div>
		
		  <form class="form-signin" ng-controller="NavigationController">
			<h2 class="form-signin-heading">Please sign in</h2>
			<label for="inputEmail" class="sr-only">Email address</label>
			<input type="email" id="inputEmail" ng-model="login.email" class="form-control" placeholder="Email address" required="" autofocus="">
			<label for="inputPassword" class="sr-only">Password</label>
			<input type="password" id="inputPassword" ng-model="login.password" class="form-control" placeholder="Password" required="">
			<div class="checkbox"></div>
			<button class="btn btn-lg btn-primary btn-block" ng-click="logUsein();" type="submit">Sign in</button>
		  </form>

    </div>